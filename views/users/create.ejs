<!-- views/articles/create.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Article | Create</title>
</head>
<body>
    <!-- mengirim datanya dengan method post ke halaman /articles -->
    <form method="POST" action="/articles">
        <label for="title">Title</label>
        <br>
        <!-- input berupa text dapat di baca dengan req.body.title -->
        <input type="text" name="title"/>
        <br>

        <label for="body">Body</label>
        <br>
        <!-- input berupa text dapat di baca dengan req.body.body -->
        <input type="text" name="body"/>
        <br>

        <button type="submit">Submit</button>
    </form>
    
</body>
</html>